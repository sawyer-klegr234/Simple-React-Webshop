{
	"private": true,
	"type": "module",
	"watch": {
		"dev": {
			"patterns": [
				"src"
			]
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"watch": "npm-watch",
		"test": "jest"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"testMatch": [
			"**/__tests__/**/*.test.[jt]s?(x)",
			"**/?(*.)+(spec|test).[jt]s?(x)"
		]
	},
	"dependencies": {
		"@auth0/auth0-spa-js": "^2.1.2",
		"npm-watch": "^0.11.0",
		"preact": "^10.13.1",
		"preact-render-to-string": "^6.3.1",
		"react-router-dom": "^6.20.0"
	},
	"devDependencies": {
		"@preact/preset-vite": "^2.5.0",
		"@types/jest": "^29.5.10",
		"eslint": "^8.54.0",
		"eslint-config-preact": "^1.3.0",
		"jest": "^29.7.0",
		"sass": "^1.69.5",
		"ts-jest": "^29.1.1",
		"typescript": "^5.3.2",
		"vite": "^4.3.2"
	}
}